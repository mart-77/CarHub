<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/arrows"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="162dp"
        android:layout_height="35dp"
        android:text="Volver"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:onClick="lanzarMain"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_grupo"
            android:layout_width="270dp"
            android:layout_height="173dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/fusca"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_titulo_publicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Fusca 2035"
            android:layout_marginLeft="80dp"

            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_precio_publicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:text="Precio"
            android:layout_marginLeft="80dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_descripcion_publicacion"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="250dp"
            android:text="Descripcion"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_descripcion_publicacion_campo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="280dp"
            android:text="Descripcion"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/tv_estado_publicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:text="Estado"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />

    </RelativeLayout>


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        app:srcCompat="@drawable/toolbar_background" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="330dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="50dp"

        app:srcCompat="@drawable/toolbar" />

    <Button
        android:id="@+id/toolbar_main_boton"
        android:layout_width="71dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="620dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/toolbar_chat_boton"
        android:layout_width="43dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="620dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="9dp"
        android:onClick="lanzarChat"
        />

    <Button
        android:id="@+id/toolbar_faq_boton"
        android:layout_width="43dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="224dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="620dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="9dp"
        android:onClick="lanzarFAQ"/>

    <Button
        android:id="@+id/toolbar_acercade_boton"
        android:layout_width="71dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="302dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="620dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="12dp"
        android:onClick="lanzarAcercaDe"
        />

</RelativeLayout>