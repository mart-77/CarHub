<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_iniciar_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:text="Mis Publicaciones"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
       app:layout_constraintBottom_toTopOf="@id/lv_grupos_cercanos" />

    <ListView
        android:id="@+id/lv_grupos_cercanos"
        android:layout_width="412dp"
        android:layout_height="578dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/lv_grupos_cercanos">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            app:srcCompat="@drawable/toolbar_background" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="330dp"
            android:layout_height="81dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="650dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="50dp"

            app:srcCompat="@drawable/toolbar" />

        <Button
            android:id="@+id/toolbar_main_boton"
            android:layout_width="71dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="620dp"
            android:layout_marginRight="36dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="14dp" />

        <Button
            android:id="@+id/toolbar_chat_boton"
            android:layout_width="43dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="620dp"
            android:layout_marginRight="36dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="9dp"
            android:onClick="lanzarChat"
            />

        <Button
            android:id="@+id/toolbar_faq_boton"
            android:layout_width="43dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="224dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="620dp"
            android:layout_marginRight="36dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="9dp"
            android:onClick="lanzarFAQ"/>

        <Button
            android:id="@+id/toolbar_acercade_boton"
            android:layout_width="71dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="302dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="620dp"
            android:layout_marginRight="36dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="12dp"
            android:onClick="lanzarAcercaDe"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>